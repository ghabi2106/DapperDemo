@model IEnumerable<DapperDemo.Models.Category>


<div class="row">
    <div class="col-3 offset-6">
        <a class="btn btn-success form-control" asp-action="AddTestRecords">Add Dummy Records</a>
    </div>
    <div class="col-3">
        <a class="btn btn-danger form-control" asp-action="RemoveTestRecords">Remove Dummy Records</a>
    </div>
</div>

@foreach (Category comp in Model)
{
    <h1>@comp.Name</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => comp.Books.FirstOrDefault().Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => comp.Books.FirstOrDefault().Publisher)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in comp.Books)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Publisher)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

